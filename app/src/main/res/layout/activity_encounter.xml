<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EncounterActivity"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/fightLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="400dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/forest"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="5dp">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/clericGif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/wizardGif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/mageGif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/knightGif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/enemyGif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/hide_encounter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hp1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/clip_health" />

            <ImageView
                android:id="@+id/hp2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/clip_health" />

            <ImageView
                android:id="@+id/hp3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/clip_health" />

            <ImageView
                android:id="@+id/hp4"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/clip_health" />

            <ImageView
                android:id="@+id/hp5"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:padding="10dp"
                android:src="@drawable/clip_health" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/historyFight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/encounterButton"
        android:layout_below="@+id/fightLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-375dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/alagard"
        android:scrollbars="vertical"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/guideImage"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_above="@+id/encounterButton"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/encounterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:text="@string/encounter"
        android:textSize="32sp"
        android:fontFamily="@font/alagard"/>

</RelativeLayout>