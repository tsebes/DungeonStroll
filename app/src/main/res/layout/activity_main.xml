<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">


    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:src="@drawable/logo"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:text="@string/app_name"
            android:fontFamily="@font/alagard"/>
    </LinearLayout>

    <TextView
        android:id="@+id/chooseLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/titleLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="@string/language"
        android:fontFamily="@font/alagard"/>

    <Button
        android:id="@+id/plButton"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentStart="true" android:layout_below="@id/chooseLang"
        android:layout_alignParentEnd="true" android:layout_marginStart="100dp"
        android:layout_marginTop="20dp" android:layout_marginEnd="100dp"
        android:textSize="32sp"
        android:text="Polski"
        android:fontFamily="@font/alagard"/>
    <!-- TODO change string to image-->

    <Button
        android:id="@+id/engButton"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@+id/plButton" android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" android:layout_marginStart="100dp"
        android:layout_marginTop="25dp" android:layout_marginEnd="100dp"
        android:textSize="32sp"
        android:text="English"
        android:fontFamily="@font/alagard"/>
    <!-- TODO change string to image-->


</RelativeLayout>